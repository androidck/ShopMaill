<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="49dp"
           android:orientation="horizontal"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/my_setup"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               />
       </RelativeLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           >
           <ImageView
               android:id="@+id/head_img"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/non_member_head"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="登录"
               android:gravity="center_vertical"
               android:textColor="#222222"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="75dp"
           android:background="@mipmap/my_bg"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginTop="15dp"
           android:orientation="horizontal"
           >
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:layout_marginLeft="15dp"
               android:orientation="vertical"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:text="我的资产"
                   android:textColor="@android:color/white"
                   android:gravity="center_vertical|bottom"
                   />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="￥"
                       android:gravity="center"
                       android:textColor="@android:color/white"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="0"

                       android:textColor="@android:color/white"
                       android:textSize="25dp"
                       android:textStyle="bold"
                       />
               </LinearLayout>
           </LinearLayout>
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:textColor="@android:color/white"
               android:text="查看 >"
               android:gravity="center_vertical|right"
               android:layout_marginRight="15dp"
               />
       </LinearLayout>
       <!-- 商品  店铺   足迹 -->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="55dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:orientation="horizontal"
           android:layout_marginTop="15dp"
           >
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="vertical"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:text="0"
                   android:textColor="#222222"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textSize="18dp"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:text="收藏的商品"
                   android:gravity="center_horizontal"
                   android:textSize="12dp"
                   />
           </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#e5e5e5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="vertical"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:text="0"
                   android:textColor="#222222"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textSize="18dp"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:text="收藏的店铺"
                   android:gravity="center_horizontal"
                   android:textSize="12dp"
                   />
           </LinearLayout>
           <View
               android:layout_width="0.5dp"
               android:layout_height="match_parent"
               android:background="#e5e5e5"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               />
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="vertical"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:text="0"
                   android:textColor="#222222"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textSize="18dp"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:text="我的足迹"
                   android:gravity="center_horizontal"
                   android:textSize="12dp"
                   />
           </LinearLayout>
       </LinearLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="10dp"
           android:background="#f6f6f6"
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:text="我的订单"
               android:textColor="#222222"
               android:textStyle="bold"
               android:gravity="center_vertical"
               android:layout_marginLeft="15dp"
               />
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:text="查看我的订单"
               android:drawableRight="@mipmap/arrow_right"
               android:textSize="12dp"
               android:gravity="center_vertical|right"
               android:layout_marginRight="15dp"
               android:drawablePadding="8dp"
               />
       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="#e5e5e5"
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:drawableTop="@mipmap/wait_pay_icon"
               android:text="待支付"
               android:gravity="center"
               android:textSize="13dp"
               android:textColor="#222222"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="8dp"
               />

           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:drawableTop="@mipmap/wait_share_icon"
               android:text="待分享"
               android:gravity="center"
               android:textSize="13dp"
               android:textColor="#222222"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="8dp"
               />

           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:drawableTop="@mipmap/wait_send_goods_icon"
               android:text="待发货"
               android:gravity="center"
               android:textSize="13dp"
               android:textColor="#222222"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="8dp"
               />

           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:drawableTop="@mipmap/wait_get_goods_icon"
               android:text="待收货"
               android:gravity="center"
               android:textSize="13dp"
               android:textColor="#222222"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="8dp"
               />

           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:drawableTop="@mipmap/return_goods_icon"
               android:text="退货"
               android:gravity="center"
               android:textSize="13dp"
               android:textColor="#222222"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="8dp"
               />

       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="10dp"
           android:background="#f6f6f6"
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:text="常用工具"
               android:textColor="#222222"
               android:textStyle="bold"
               android:gravity="center_vertical"
               android:layout_marginLeft="15dp"
               />
       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="#e5e5e5"
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               >
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="优惠券"
                   android:drawableTop="@mipmap/my_youhui"
                   android:gravity="center"
                   android:textSize="12dp"
                   android:textColor="#333333"
                   />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="收货地址"
                   android:drawableTop="@mipmap/address"
                   android:gravity="center"
                   android:textSize="12dp"
                   android:textColor="#333333"

                   />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="我的晒单"
                   android:drawableTop="@mipmap/my_shaidan"
                   android:gravity="center"
                   android:textSize="12dp"
                   android:textColor="#333333"
                   />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="意见反馈"
                   android:drawableTop="@mipmap/yijian"
                   android:gravity="center"
                   android:textSize="12dp"
                   android:textColor="#333333"
                   />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:layout_marginTop="20dp"
               >
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="商家入驻"
                   android:drawableTop="@mipmap/shangjiaruzhu"
                   android:gravity="center"
                   android:textSize="12dp"
                   android:textColor="#333333"
                   />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="补充推荐人"
                   android:drawableTop="@mipmap/tuijianren"
                   android:gravity="center"
                   android:textSize="12dp"
                   android:textColor="#333333"
                   />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:gravity="center"
                   />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:gravity="center"
                   />

           </LinearLayout>

       </LinearLayout>
   </LinearLayout>
</LinearLayout>